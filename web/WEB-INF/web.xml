<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AlunoController</servlet-name>
        <servlet-class>Controller.AlunoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AreaRestritaController</servlet-name>
        <servlet-class>Controller.AreaRestritaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InstrutorController</servlet-name>
        <servlet-class>Controller.InstrutorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClassController</servlet-name>
        <servlet-class>Controller.ClassController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CursoController</servlet-name>
        <servlet-class>Controller.CursoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MatriculaController</servlet-name>
        <servlet-class>Controller.MatriculaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>Controller.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexController</servlet-name>
        <servlet-class>Controller.IndexController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateController</servlet-name>
        <servlet-class>Controller.Aluno.UpdateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnrollController</servlet-name>
        <servlet-class>Controller.Aluno.EnrollController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GradesController</servlet-name>
        <servlet-class>Controller.Aluno.GradesController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AlunoController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/register_admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AreaRestritaController</servlet-name>
        <url-pattern>/perfil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InstrutorController</servlet-name>
        <url-pattern>/register_instructor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClassController</servlet-name>
        <url-pattern>/register_class</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CursoController</servlet-name>
        <url-pattern>/register_course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MatriculaController</servlet-name>
        <url-pattern>/register_enrollment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexController</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateController</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnrollController</servlet-name>
        <url-pattern>/enroll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GradesController</servlet-name>
        <url-pattern>/grades</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
